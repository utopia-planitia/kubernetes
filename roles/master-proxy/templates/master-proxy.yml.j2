apiVersion: v1
kind: Pod
metadata:
  name: master-proxy
  namespace: kube-system
  annotations:
    ansible/config-hash: {{ master_proxy_config_hashsum }}
  labels:
    name: master-proxy
    host: {{ inventory_hostname_short }}
spec:
  hostNetwork: true
  containers:
    - name: forwarder
      image: {{ nginx_image }}
      livenessProbe:
        tcpSocket:
          port: 6443
      resources:
        requests:
          cpu: 100m
          memory: 50Mi
        limits:
          cpu: 1000m
          memory: 50Mi
      volumeMounts:
        - name: config
          mountPath: /etc/nginx/
  volumes:
    - name: config
      hostPath:
        path: /etc/master-proxy/
